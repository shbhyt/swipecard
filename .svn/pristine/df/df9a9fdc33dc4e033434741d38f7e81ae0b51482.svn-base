*{
	font-size:12px;
}
body {
    font-family:helvetica,tahoma,verdana,sans-serif;
    padding:0;
    font-size:13px;
    margin:0;
}
h2 {
    font-size:18px;
    font-weight:bold;
    margin:0;
    margin-bottom:15px;
}
.demo-info{
	background:#FFFEE6;
	color:#8F5700;
	padding:12px;
}
.demo-tip{
	width:16px;
	height:16px;
	margin-right:8px;
	float:left;
}


#loadingImg{
    z-index: 9999;
    position: absolute;
    left: 0px;
    top: 0px;
    width: 100%;
    height: 100%; 
    background-color: #F8F8F8;
    opacity: 0.5;
    display: none;
}

#loadingImg label{
    border: 0px solid red;
    position: absolute;
    left: 300px;
    top: 250px;
}