/* Accordion Menu by www.menucool.com/vertical/accordion-menu*/

#accordion {
    visibility:hidden;
    background:#ddd;
    box-shadow:rgba(0,0,0,0.3) 0 0 90px inset;
}

/* root UL */
#accordion ul {
    padding:0;
    margin:0;
    list-style:none;
}

/*---------- Indents ------*/

/*top-level*/
#accordion .top > a, #accordion .top > div { 
    padding-left:10px;
    padding-top:10px;padding-bottom:10px;
}

/*2nd-level*/
#accordion li li > a, #accordion li li > div {
    padding-left:20px;
    padding-top:8px;padding-bottom:8px;
}

/*3rd-level*/
#accordion li li li > a, #accordion li li li > div { padding-left:35px; }

/*4rd-level*/
#accordion li li li li > a, #accordion li li li li > div { padding-left:50px; }


/*---------- Other styles ------*/

/* headings */
#accordion li > div{
    font-family:'Lucida Grande', Geneva, Candara, Tahoma, sans-serif;
    font-weight:bold;
    font-size:small;
    color:#4d4d4d;
}
#accordion .active > div{
    color:#C3A944;
}

#accordion li {
    font-family:Arial, sans-serif;
    font-size:12px;
	padding: 0;
    margin:0;
	cursor: pointer;
    overflow:hidden;
}

/* Add borders to the top LIs */
#accordion li.top {
	border-top: 1px solid #A9B1B7;
    border-bottom: 1px solid #80868A;
}

/* links */
#accordion a {
    color:#555555;
    font-weight:normal;
    font-size:12px;
    text-decoration:none;
    display:block;
    line-height:1;
    transition:all 0.3s;
}
#accordion a:hover {
    color:#C3A944;
}
#accordion a.active {
    color:#C3A944;
    background-color:#C3A944;
}


/* carets */
#accordion div.caret {
    color:inherit;
    float:right;
    display:block;
    margin-bottom:0px;
    margin-right:12px;
    width: 0;
    height: 0;
    overflow:hidden;/*for IE6*/
    border-style:solid;/*caret size is 6px now*/
    border-width:6px;
    position:relative;
    border-bottom:6px solid transparent;
    border-right: none;
    border-left-color:initial;
    border-top-color: transparent;
}

#accordion div.caret.active {
    margin-bottom:3px;
    margin-right:6px;
    border-bottom:none;
    border-right: 6px solid transparent;
    border-left-color: transparent;
    border-top-color:initial;
}

#accordion li {
    -ms-user-select:none;
    -mos-user-select:none;
    -webkit-user-select:none;
    -o-user-select:none;
    user-select:none;
}
